@model EmployeeSystemERPTaskWeb.Models.VM.AccountCreateVM

@{
    ViewData["Title"] = "Add a new Account";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg" style="width: 600px; margin: 0 auto;">
                <h1 class="card-header bg-black text-white text-center">Add a New Account</h1>
                <div class="card-body">
                    <form asp-action="Create" class="mt-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Account.Name" class="control-label">Name</label>
                            <input asp-for="Account.Name" class="form-control" />
                            <span asp-validation-for="Account.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Account.LineOfBusinessIds" class="control-label">Business Lines</label>
                            <select asp-for="Account.LineOfBusinessIds" class="form-control" asp-items="@Model.LineOfBusinessList" multiple></select>
                            <span asp-validation-for="Account.LineOfBusinessIds" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-success">Create</button>
                            <a class="btn btn-secondary ml-2" asp-action="Index">Show All</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>