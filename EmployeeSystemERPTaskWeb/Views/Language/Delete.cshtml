@model EmployeeSystemERPTaskWeb.Model.DTO.LanguageDTO

@{
    ViewData["Title"] = "Delete Confirmation";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg" style="width: 600px; margin: 0 auto;">
                <h1 class="card-header bg-black text-white text-center">Details of Language</h1>
                <div class="card-body">
                    <form asp-action="Delete" class="mt-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Name:</label>
                            <input asp-for="Name" asp-royte-id="" class="form-control" disabled />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-danger" asp-controller="Language" asp-action="Delete">Delete</button>
                            <a class="btn btn-secondary ml-2" asp-action="Index">Show All</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
